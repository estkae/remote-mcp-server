            "required": ["topic"]
          }
        },
        {
          "name": "optimize_for_seo",
          "description": "Optimiert einen Text für SEO",
          "input_schema": {
            "type": "object",
            "properties": {
              "content": {
                "type": "string",
                "description": "Der zu optimierende Text"
              },
              "target_keywords": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Ziel-Keywords"
              }
            },
            "required": ["content", "target_keywords"]
          }
        }
      ]
    }
