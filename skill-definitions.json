            "type": "object",
            "properties": {
              "filepath": {
                "type": "string",
                "description": "Vollständiger Pfad zur PDF-Datei"
              },
              "page_range": {
                "type": "string",
                "description": "Seitenbereich (z.B. '1-5' oder 'all')",
                "default": "all"
              }
            },
            "required": ["filepath"]
          }
        },
        {
          "name": "read_pdf_with_ocr",
          "description": "Liest eine gescannte PDF-Datei mit OCR",
          "input_schema": {
            "type": "object",
            "properties": {
              "filepath": {
                "type": "string",
                "description": "Vollständiger Pfad zur PDF-Datei"
              },
              "language": {
                "type": "string",
                "description": "Sprache für OCR (z.B. 'deu', 'eng')",
                "default": "deu"
              }
            },
            "required": ["filepath"]
          }
        },
        {
          "name": "list_pdfs",
          "description": "Listet alle PDF-Dateien in einem Verzeichnis auf",
          "input_schema": {
            "type": "object",
            "properties": {
              "directory": {
                "type": "string",
                "description": "Verzeichnispfad"
              }
            },
            "required": ["directory"]
          }
        }
      ]
    },
    {
      "id": "code-review",
      "name": "Code Review Skill",
      "description": "Führt Code-Reviews und Qualitätsprüfungen durch",
      "keywords": ["code", "review", "quality", "lint", "static analysis", "bugs", "security"],
      "tools": [
        {
          "name": "review_code",
          "description": "Führt ein Code-Review durch",
          "input_schema": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "description": "Der zu prüfende Code"
              },
              "language": {
                "type": "string",
                "description": "Programmiersprache (z.B. 'javascript', 'python', 'java')"
              },
              "focus": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["security", "performance", "style", "bugs", "best-practices"]
                },
                "description": "Fokus der Review",
                "default": ["bugs", "security"]
              }
            },
            "required": ["code", "language"]
          }
        },
        {
          "name": "suggest_improvements",
          "description": "Schlägt Verbesserungen für Code vor",
          "input_schema": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "description": "Der Code, der verbessert werden soll"
              },
              "language": {
                "type": "string",
                "description": "Programmiersprache"
              }
            },
            "required": ["code", "language"]
          }
        }
      ]
    },
    {
