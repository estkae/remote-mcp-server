{
  "skills": [
    {
      "id": "powerpoint",
      "name": "PowerPoint Skill",
      "description": "Erstellt und bearbeitet PowerPoint-Präsentationen",
      "keywords": ["powerpoint", "präsentation", "slides", "folien", "pptx", "presentation"],
      "tools": [
        {
          "name": "create_powerpoint_presentation",
          "description": "Erstellt eine neue PowerPoint-Präsentation (.pptx)",
          "input_schema": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string",
                "description": "Name der Datei (z.B. 'präsentation.pptx')"
              },
              "title": {
                "type": "string",
                "description": "Titel der Präsentation"
              },
              "slides": {
                "type": "array",
                "description": "Array von Folien",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string" },
                    "content": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            },
            "required": ["filename", "slides"]
          }
        }
      ]
    },
    {
      "id": "excel",
      "name": "Excel Skill",
      "description": "Erstellt und bearbeitet Excel-Tabellen",
      "keywords": ["excel", "tabelle", "spreadsheet", "xlsx", "daten", "data"],
      "tools": [
        {
          "name": "create_excel_spreadsheet",
          "description": "Erstellt eine neue Excel-Tabelle (.xlsx)",
          "input_schema": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string",
                "description": "Name der Datei (z.B. 'tabelle.xlsx')"
              },
              "sheets": {
                "type": "array",
                "description": "Array von Sheets",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string", "description": "Sheet-Name" },
                    "data": {
                      "type": "array",
                      "description": "2D-Array mit Daten",
                      "items": { "type": "array" }
                    }
                  }
                }
              }
            },
            "required": ["filename", "sheets"]
          }
        },
        {
          "name": "read_excel_file",
          "description": "Liest eine Excel-Datei und gibt die Daten zurück",
          "input_schema": {
            "type": "object",
            "properties": {
              "filepath": {
                "type": "string",
                "description": "Vollständiger Pfad zur Excel-Datei"
              }
            },
            "required": ["filepath"]
          }
        }
      ]
    },
    {
